    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="css/style.css" />


</head>

<body>

    <header>
        <div id="header" class="row">
                <div class="row">
                <div class="container-fluied">
                    <div class="col-md-2">
                        <a href="#" style="padding-left: 50px">
                            <img alt="InfoSupri" src="./img/logo.png"/>
                        </a>
                    </div>
                    <div class="col-md-2">
                        <ul class="nav  navbar-nav">
                            <li><a href="#" class="js-sidebar-toggle"><i class="fa  fa-bars"></i></a></li>
                        </ul>
                      </div>
                </div>
                    <div class="col-md-3"></div>					
                    <% if (msg==""){%>
                        <div class="col-md-3"><a href ="login" style="color:white">Fazer login</a></div>
                    <% } else { %>
                        <div class="col-md-3"><h5 style="color:white">Bem vindo(a), <%=msg%></h5></div>
                    <% } %>
                </div>
        </div>
    </header>
    
    <div class="section">

    <div class="container col-md-2">
        <nav class="aw-menu  js-menu">
            <ul class="aw-menu__list">

                <li class="aw-menu__item  is-active is-expanded">
                    <a href="#">
